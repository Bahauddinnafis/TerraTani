            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_cropType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Masukkan Crop Type"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--    Area(Negara)    -->
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area(Negara)"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_cropType"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
            app:layout_constraintTop_toBottomOf="@id/tv_area"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Masukkan Area"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--    Year    -->
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_area"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
            app:layout_constraintTop_toBottomOf="@id/tv_year"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Masukkan Tahun"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--     Average Rainfall   -->
        <TextView
            android:id="@+id/tv_avgRainfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Rainfall"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_year"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_avgRainfall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
            app:layout_constraintTop_toBottomOf="@id/tv_avgRainfall"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_avgRainfall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Masukkan Rata-Rata Hujan"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--    Pesticides Tones    -->
        <TextView
            android:id="@+id/tv_pesticideTones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesticide Tones"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_avgRainfall"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_pesticideTones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
            app:layout_constraintTop_toBottomOf="@id/tv_pesticideTones"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_pesticideTones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Masukkan Pesticides Tonse"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--   Average Temperature     -->
        <TextView
            android:id="@+id/tv_avgTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Temperature"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_pesticideTones"
