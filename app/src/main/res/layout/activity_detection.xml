<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detection.DetectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--    Nitrogen    -->
        <TextView
            android:id="@+id/tv_nitrogen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nitrogen"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_nitrogren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
            app:layout_constraintTop_toBottomOf="@id/tv_nitrogen"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_nitrogen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/masukkan_nitrogen"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--    Phosporus    -->
        <TextView
            android:id="@+id/tv_phosporus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phosporus"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_nitrogren"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phosporus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
            app:layout_constraintTop_toBottomOf="@id/tv_phosporus"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_phosporus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/masukkan_phosporus"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--    K (Ratio of Potassium)    -->
        <TextView
            android:id="@+id/tv_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K (Ratio of Potassium)"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_phosporus"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_k"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
