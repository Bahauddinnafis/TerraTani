        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_avgTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/grey_text"
            app:boxStrokeColor="@color/green_master"
            app:hintTextColor="@color/green_master"
            app:cursorColor="@color/green_master"
            app:layout_constraintTop_toBottomOf="@id/tv_avgTemp"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_avgTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Masukkan Rata-Rata Suhu"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_soilImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil Image"
            android:textSize="18sp"
            android:textColor="@color/green_master"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/til_avgTemp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instruction"
            android:textSize="14sp"
            android:textColor="@color/grey_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_soilImage"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/view_upload"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_instruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_camera_black"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_instruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_gallery"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_master"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imagePreview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_camera"/>

        <ImageView
            android:id="@+id/iv_input_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gallery_black"
            android:layout_marginTop="28dp"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@id/imagePreview"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/galeri"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="28dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/imagePreview"
            app:layout_constraintStart_toEndOf="@id/iv_input_gallery"/>

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_master"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imagePreview"
            app:layout_constraintStart_toEndOf="@id/btn_gallery"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_input_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_black"
